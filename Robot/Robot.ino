/*RobotBy: Elliot Landolt*/#include <Servo.h>Servo leftWheel; // Left WheelServo rightWheel; // Right Wheelvoid setup() {  pinMode(13, INPUT);  Serial.begin(9600);  pinMode(8, OUTPUT);// red  pinMode(9, OUTPUT); // green  leftWheel.attach(11); // attach servo object to pin  rightWheel.attach(3); // attach servo object to pin}void backward(){  leftWheel.write(180);  rightWheel.write(0);}void foreward(){  leftWheel.write(0);  rightWheel.write(180);}void right(){  leftWheel.write(180);  rightWheel.write(95);}void left(){  leftWheel.write(180);  rightWheel.write(96);}void stop(){  leftWheel.write(96);  rightWheel.write(95);}void loop() {  Serial.println(digitalRead(13)); // to check the sensor  int offTable = digitalRead(13); // Is the sensor reading off the table?  if (offTable == 1){ // if the edge of a table is detected    digitalWrite(8, HIGH); // show red led    stop(); // stop    digitalWrite(9, LOW); // green led off    delay(1000); // wait before going backwards    backward(); // go backwards    delay(1000);    stop();     left(); // turn away for 1 second    delay(1000);    stop();    offTable = 1; // set it to go foreward again  }  if (offTable != 1){    foreward();     digitalWrite(9, HIGH);    digitalWrite(8, LOW);  }}