/*Distance SensorBy: Elliot Landolt*/int triggerPin = 4;int echoPin = 7;long echoTime;float cm = 0;void setup() {  pinMode(triggerPin, OUTPUT);  pinMode(echoPin, INPUT);  Serial.begin(9600);}void loop() { Serial.print(getDistance(triggerPin, echoPin)); Serial.println("cm"); delay(1000);}float getDistance(int ping, int echo){ digitalWrite(ping, LOW); delayMicroseconds(2); // send out our ping digitalWrite(ping, HIGH); delayMicroseconds(10); digitalWrite(ping, LOW); long echoTime = pulseIn(echo, HIGH); float cm = echoTime * 0.03 / 2;   return cm;}